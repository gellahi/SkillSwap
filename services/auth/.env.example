# Application
NODE_ENV=development
PORT=3001
SERVICE_NAME=auth-service

# MongoDB
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/skillswap_auth?retryWrites=true&w=majority

# JWT
# These should be actual RSA private/public key pairs for production
JWT_PRIVATE_KEY=your_private_key_here
JWT_PUBLIC_KEY=your_public_key_here
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# OTP
OTP_SECRET=your_otp_secret_here
OTP_EXPIRY=10m

# Logging
LOG_LEVEL=info

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=skillswap_auth:
REDIS_CACHE_TTL=3600
