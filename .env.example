# Application
NODE_ENV=development
PORT=3000

# MongoDB
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT
# These should be actual RSA private/public key pairs for production
JWT_PRIVATE_KEY=your_private_key_here
JWT_PUBLIC_KEY=your_public_key_here
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# OTP
OTP_SECRET=your_otp_secret_here
OTP_EXPIRY=10m

# Services
AUTH_SERVICE_URL=http://localhost:3001
PROJECTS_SERVICE_URL=http://localhost:3002
BIDS_SERVICE_URL=http://localhost:3003
MESSAGES_SERVICE_URL=http://localhost:3004
NOTIFICATIONS_SERVICE_URL=http://localhost:3005

# Logging
LOG_LEVEL=info
